<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BlackLauncher" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> --><!-- Default text appearance -->
<!--        <item name="android:fontFamily">@font/jaini_purva</item>-->
<!--        <item name="android:fontFamily">@font/caveat</item>-->
<!--        <item name="android:fontFamily">@font/abel</item>-->

    </style>
    <style name="Theme.Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="Theme.BlackLauncher" parent="Base.Theme.BlackLauncher">
        <!-- 固定字体和显示大小 -->
        <item name="android:textSize">@dimen/fixed_text_size</item>
        <item name="android:textViewStyle">@style/FixedTextViewStyle</item>
        <item name="android:buttonStyle">@style/FixedButtonStyle</item>
        <item name="android:editTextStyle">@style/FixedEditTextStyle</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BlurDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="BlurDialogTheme2" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <style name="FullScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>
    
    <!-- 全屏模糊背景对话框样式 -->
    <style name="BlurBackgroundDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>
    
    <!-- 在模糊背景上显示的对话框样式 -->
    <style name="DialogOverBlurredBackground" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>
    
    <!-- 固定大小的TextView样式 -->
    <style name="FixedTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/fixed_text_size</item>
        <item name="android:textScaleX">1.0</item>
    </style>
    
    <!-- 固定大小的Button样式 -->
    <style name="FixedButtonStyle" parent="android:Widget.Button">
        <item name="android:textSize">@dimen/fixed_text_size</item>
        <item name="android:textScaleX">1.0</item>
    </style>
    
    <!-- 固定大小的EditText样式 -->
    <style name="FixedEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textSize">@dimen/fixed_text_size</item>
        <item name="android:textScaleX">1.0</item>
    </style>
</resources>